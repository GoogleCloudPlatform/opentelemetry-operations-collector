if command -v systemctl >/dev/null 2>&1; then
    if [ -d /run/systemd/system ]; then
        systemctl daemon-reload
    fi
    systemctl enable {{ .BinaryName }}.service
    if [ -f /etc/{{ .BinaryName }}/config.yaml ]; then
        if [ -d /run/systemd/system ]; then
            systemctl restart {{ .BinaryName }}.service
        fi
    fi
fi