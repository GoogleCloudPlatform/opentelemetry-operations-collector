[Unit]
Description={{ .Description }}
After=network.target

[Service]
EnvironmentFile=/etc/{{ .BinaryName }}/{{ .BinaryName }}.conf
ExecStart=/usr/bin/{{ .BinaryName }} $OTELCOL_OPTIONS
KillMode=mixed
Restart=on-failure
Type=simple
User={{ .BinaryName }}
Group={{ .BinaryName }}

[Install]
WantedBy=multi-user.target